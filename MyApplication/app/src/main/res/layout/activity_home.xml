<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:layout_weight="0.92"
        android:id="@+id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_weight="0.08"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/ibtnFind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_background_button_2_gradius_blue"
            app:srcCompat="@mipmap/ic_find_choose" />

        <ImageButton
            android:id="@+id/ibtnScan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_background_button_2_gradius_blue"
            app:srcCompat="@mipmap/ic_qrcode" />

        <ImageButton
            android:id="@+id/ibtnFriends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_background_button_2_gradius_blue"
            app:srcCompat="@mipmap/ic_friends" />
        <ImageButton
            android:id="@+id/ibtnMoneyManagement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_background_button_2_gradius_blue"
            app:srcCompat="@mipmap/ic_money_management" />

        <ImageButton
            android:id="@+id/ibtnMore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_background_button_2_gradius_blue"
            app:srcCompat="@mipmap/ic_more" />
    </LinearLayout>

</LinearLayout>
